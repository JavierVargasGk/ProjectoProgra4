@model BattleFight.Models.Usuario
<script>
    var menu = document.getElementById("menu");
    menu.style.display = "none";
</script>
<h4>Ingresar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ingrese su usuario</label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contraseña</label>
                <input type="password" asp-for="Contrasenna" class="form-control" />
                <span asp-validation-for="Contrasenna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary mt-1" />
            </div>
            @{
                if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }
            }
        </form>
        <div>
            <Label class="text-black mt-1">No tiene cuenta?</Label><br/>
            <a asp-action="SignIn">Crear Cuenta</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
