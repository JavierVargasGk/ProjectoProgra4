@model BattleFight.Models.Usuario

<h4>Registrarse</h4>
<hr />
<script>
    var menu = document.getElementById("menu");
    menu.style.display = "none";
</script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignIn" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" placeholder="Ingrese su cedula"/>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alias" class="control-label"></label>
                <input asp-for="Alias" class="form-control" placeholder="Ingrese un nombre de usuario" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label><br/>
                <input type="radio" asp-for="Genero" value="Masculino"/> Masculino<br/>
                <input type="radio" asp-for="Genero" value="Femenino"/> Femenino
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenna" class="control-label">Contraseña</label>
                <input type="password" asp-for="Contrasenna" class="form-control" />
                <span asp-validation-for="Contrasenna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Confirme su contraseña</label>
                <input type="password" name="confirmacion" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="SignIn" class="btn btn-primary" />
            </div>
        </form>
        @{
            if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
