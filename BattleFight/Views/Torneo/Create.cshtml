@model BattleFight.Models.Torneo

<h4>Torneo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Premio"></label><br/>
                <input asp-for="Premio" type="number" step="0.01"  />
                <span asp-validation-for="Premio" class="text-danger"></span>
            </div>
            <div class="mt-1">
                <label asp-for="Categoria" class="control-label"></label> <br />
                <label asp-for="Categoria" class="control-label">Beginner</label>
                <input type="radio" asp-for="Categoria" value="Beginner" /> <br />
                <label asp-for="Categoria" class="control-label">Medium</label>
                <input type="radio" asp-for="Categoria" value="Medium" /> <br />
                <label asp-for="Categoria" class="control-label">Expert</label>
                <input type="radio" asp-for="Categoria" value="Expert" /> <br />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="reset" value="Limpiar" class="btn"/>
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a torneos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
